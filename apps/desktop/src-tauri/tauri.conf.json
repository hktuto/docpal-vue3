{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm -filter desktop run generate",
    "beforeDevCommand": "pnpm -filter desktop run app:dev",
    "devPath": "http://localhost:3000",
    "distDir": "../.output/public"
  },
  "package": {
    "productName": "DocPal",
    "version": "1.0.1"
  },
  "tauri": {
    "macOSPrivateApi": true,
    "allowlist": {
      "path": {
        "all": true
      },
      "clipboard": {
        "all": true
      },
      "dialog": {
        "all": true, 
        "ask": true, 
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "http": {
        "all": true, 
        "request": true,
        "scope": ["https://app4.wclsolution.com/*"]
      },
      "notification": {
        "all": true
      },
      "window": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.wclsolution.docpal",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://app4.wclsolution.com/resources/desktop/release.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IERGMUUyQUNCMEVFREJGRjcKUldUM3YrME95eW9lMzJ6NzJCeXVTNlZvSWVObEtCVC91WGVzUHAzeEwxR1MvcjIvaTdtRU44c1AK"
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "DocPal",
        "width": 1200,
        "transparent": true,
        "decorations": false
      }
    ]
  }
}
